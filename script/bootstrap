#!/usr/bin/env bash

function bootstrap {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  case "$(uname -s)" in
    Linux)
      ${NOSUDO} sudo aptitude install -y sysstat tcpdump iputils-ping traceroute strace lsof dnsutils telnet
      ;;
  esac

  pkg ensure misc/figlet
  pkg ensure sysutils/coreutils
  pkg ensure sysutils/findutils
}

bootstrap
